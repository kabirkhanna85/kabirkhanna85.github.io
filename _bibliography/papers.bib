}

@article{khanna2022gupJC,
  abbr={arXiv},
  bibtex_show={true},
  title={GUP Corrections to the Jaynes--Cummings Model},
  author={Khanna, Kabir and Das, Saurya},
  abstract={We incorporate corrections from the Generalized Uncertainty Principle (GUP), a feature of certain quantum gravity models, into the Jaynes–Cummings model describing the interaction of a two-level atom with a quantized electromagnetic field mode. We derive a modified Rabi frequency due to GUP effects and discuss how such modifications might be observable in cavity QED experiments. The results suggest that precision quantum optical experiments could potentially place bounds on GUP parameters and offer an experimental window into quantum gravity phenomenology.},
