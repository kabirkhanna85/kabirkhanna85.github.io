@article{khanna2025measurement,
  abbr={arXiv},
  bibtex_show={true},
  title={Measurement-Induced Entanglement in Conformal Field Theory},
  author={Khanna, Kabir and Vasseur, Romain},
  abstract={Local measurements can radically reshape patterns of many-body entanglement, especially in long-range entangled quantum-critical states. Yet, analytical results addressing the effects of measurements on many-body states remain scarce, and measurements are often approximated as forcing specific measurement outcomes. We study measurement-induced entanglement (MIE) in Tomonaga-Luttinger liquids, a broad family of 1+1 d quantum-critical states described at low energies by compact free boson conformal field theories (CFT). Measuring the local charge operator, we show that the MIE is entirely universal, conformally invariant, and depends on the operator content of the CFT. Using a replica-trick to address the randomness of the measurement outcomes, we compute the MIE exactly for Tomonaga-Luttinger liquids, in very good agreement with matrix-product state calculations. We show that the MIE for physical quantum measurements is fundamentally different from the entanglement induced by forcing measurement outcomes, and has a natural interpretation in terms of Born averaging over conformally-invariant boundary conditions.},
  journal={arXiv preprint arXiv:2508.02788},
  year={2025},
  month={Aug},
  url={https://arxiv.org/abs/2508.02788},
  pdf={2508.02788.pdf},
  selected={true}
}

@article{khanna2025randomTR,
  abbr={arXiv},
  bibtex_show={true},
  title={Random Quantum Circuits with Time-Reversal Symmetry},
  author={Kumar, Aniket and Khanna, Kabir and Vasseur, Romain and Ludwig, Andreas W W},
  abstract={We introduce ensembles of random quantum circuits with time-reversal (TR) invariance, where the TR operator squares to +1 or -1, and study their properties. These circuits provide a natural setting for exploring the interplay between quantum chaos, entanglement growth, and TR symmetry in strongly interacting systems. Using mappings to classical statistical mechanics models, we analyze entanglement dynamics, spectral correlations, and measurement-induced phase transitions. In particular, we show that TR symmetry can qualitatively change the universality class of these transitions, leading to new critical behavior and scaling forms. Our results are supported by numerical simulations and analytical arguments.},
  journal={arXiv preprint arXiv:2501.13161},
  year={2025},
  month={Jan},
  url={https://arxiv.org/abs/2501.13161},
  pdf={2501.13161.pdf},
  selected={true}
}

@article{khanna2023decoherence,
  abbr={arXiv},
  bibtex_show={true},
  title={Decoherence due to Spacetime Curvature},
  author={Singh, Rajeev and Khanna, Kabir and Kothawala, Dawood},
  abstract={We investigate the effect of spacetime curvature on the quantum coherence of composite systems. Specifically, we calculate the decoherence time scale for such systems in curved spacetime backgrounds, relating it explicitly to the components of the Riemann tensor and tidal acceleration. We show that curvature-induced decoherence is unavoidable for extended systems and provide estimates for astrophysical and cosmological scenarios. Our results highlight a new interplay between quantum information and general relativity, with potential implications for quantum experiments in curved spacetimes.},
